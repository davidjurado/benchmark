FROM python:3.9-slim-buster

RUN apt-get update -y && apt-get install -y git-lfs llvm build-essential ffmpeg libsm6 libxext6 libsndfile1

RUN  python -m pip install --upgrade pip && pip install typer  \
    && pip install  \
    torch==1.10.0+cpu \
    torchvision==0.11.1+cpu \
    torchtext \
    torchaudio==0.10.0+cpu -f https://download.pytorch.org/whl/cpu/torch_stable.html

RUN git clone https://github.com/davidjurado/benchmark.git && \
    cd benchmark && git checkout mlcube && \
    python install.py && pip install -U numpy && cd /

COPY . .

RUN chmod +x ./mlcube/run_test.sh ./mlcube/run_test_bench.sh

ENTRYPOINT ["python", "mlcube/mlcube.py"]
